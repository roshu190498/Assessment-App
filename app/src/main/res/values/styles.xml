<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
        <item name="helperTextTextAppearance">@style/HelperTextAppearance</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
    </style>



    <style name="HintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="HelperTextAppearance" parent="TextAppearance.Design.HelperText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>


    <style name="EditTextAppearance" parent="Widget.Design.TextInputEditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>


</resources>